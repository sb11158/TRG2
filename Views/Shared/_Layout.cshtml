        <a class="brand" asp-controller="Home" asp-action="Index">
            <img class="logo" src="~/img/TheRitchieGroup_logo (Edited) (1).png" />
        </a>

        <div class="social-list hidden-xs">
            <a href="https://www.linkedin.com/company/the-ritchie-group-llc/about/" class="fa fa-linkedin"></a>
            <a href="" class="fa fa-facebook"></a>
            <a href="" class="fa fa-instagram"></a>
        </div>

        <div class="navbar-spacer hidden-sm hidden-xs"></div>

        @*<address class="navbar-address hidden-sm hidden-xs">call us: <span class="text-dark">(+080) 9684 32 45 789</span></address>*@
    </header>
    @*Sidebar Menu*@
    <div class="menu">
        <span class="close-menu right-boxed"></span>
        <ul class="menu-list right-boxed">
            <li>
                <a asp-controller="Home" asp-action="AllProjects">Projects</a>
                <ul>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="AllProjects">All</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="MultiFamilyProjects">Multi-Family</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="IndustrialProjects">Industrial</a>
