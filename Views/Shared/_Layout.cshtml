                    </li>
                </ul>
            </li>
            <li>
                <a class="nav-link text-dark" asp-controller="Home" asp-action="News">News</a>
            </li>
            <li>
                <a href="#">About Us</a>
                <ul>
                    <li><a class="nav-link text-dark" asp-controller="Home" asp-action="Team">Team</a></li>
                    <li><a class="nav-link text-dark" asp-controller="Home" asp-action="History">History</a></li>
                    <li><a class="nav-link text-dark" asp-controller="Home" asp-action="GiveBack">Giving Back</a></li>
                    @*<li><a class="nav-link text-dark" asp-controller="Home" asp-action="Sustainability">Sustainability</a></li>*@
                </ul>
            </li>
            <li>
                <a href="#">Investors</a>
                <ul>
                    <li><a href="about.html">Investor Portal</a></li>
                    <li><a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
            </li>
        </ul>
        <div class="menu-footer right-boxed">
            <div class="social-list">
                <a href="https://www.linkedin.com/company/the-ritchie-group-llc/about/" class="fa fa-linkedin"></a>
                <a href="" class="fa fa-facebook"></a>
                <a href="" class="fa fa-instagram"></a>
            </div>
            <div class="copy">© The Ritchie Group 2021. All Rights Reseverd</div>
        </div>
    </div>

    @*Body*@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->

    <footer id="footer" class="footer section boxed">
        <div class="footer-flex">
            <div class="flex-item">
                <a class="brand pull-left" asp-controller="Home" asp-action="Index">
                    <img src="~/img/TRG2.0.png" />
                    <div class="brand-info">
                        <div class="brand-name">The Ritchie Group</div>
                        <div class="brand-text">solutions</div>
                    </div>
